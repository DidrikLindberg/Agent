# ===========================================
# GOOGLE WORKSPACE / GMAIL CONFIGURATION
# ===========================================
# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/callback

# ===========================================
# ANTHROPIC / CLAUDE CONFIGURATION
# ===========================================
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api...

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-20250514

# ===========================================
# USER CONFIGURATION
# ===========================================
# Your Gmail address (where summaries are sent)
USER_EMAIL=your.email@gmail.com

# ===========================================
# AGENT SETTINGS
# ===========================================
# How many hours back to fetch emails (default: 24)
EMAIL_LOOKBACK_HOURS=24

# Maximum emails to process per run
MAX_EMAILS_PER_RUN=50

# ===========================================
# PATHS
# ===========================================
# Where to store OAuth tokens (relative to project root)
TOKEN_STORAGE_PATH=./data/tokens.json

# Where to store summary mappings
SUMMARY_STORAGE_PATH=./data/summaries

# Log file location
LOG_PATH=./logs

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable command processing from replies
ENABLE_COMMAND_PROCESSING=true

# Dry run mode (logs actions without executing)
DRY_RUN=false

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
