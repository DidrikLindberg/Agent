{
  "name": "email-agent",
  "version": "1.0.0",
  "description": "Personal assistant agent for email summarization and management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts src/scripts/setup-oauth.ts src/scripts/run-agent.ts --format esm --dts",
    "start": "node dist/index.js",
    "setup-oauth": "tsx src/scripts/setup-oauth.ts",
    "run-agent": "tsx src/scripts/run-agent.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "email",
    "agent",
    "gmail",
    "claude",
    "ai",
    "assistant"
  ],
  "author": "DidrikLindberg",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.0",
    "google-auth-library": "^9.0.0",
    "googleapis": "^144.0.0",
    "html-to-text": "^9.0.0",
    "mailparser": "^3.7.0",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
